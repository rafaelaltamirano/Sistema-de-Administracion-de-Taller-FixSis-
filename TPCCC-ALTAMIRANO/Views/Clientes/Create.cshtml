@model TPCCC_ALTAMIRANO.Models.Cliente

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    h2 {
        text-align: center;
        margin-bottom: 30px;
        margin-top: 20px;
    }
</style>
<h2>Agregar Cliente</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <form id="contact-form" method="post" action="contact.php" role="form">
        <div class="messages"></div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <h6>Nombre</h6>
                    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nombre " } })
                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                    @*<div class="help-block with-errors"></div>*@
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <h6>Apellido</h6>
                    @Html.EditorFor(model => model.Apellido, new { htmlAttributes = new { @class = "form-control", @placeholder = "Apellido" } })
                    @Html.ValidationMessageFor(model => model.Apellido, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <h6>Telefono</h6>
                    @Html.EditorFor(model => model.Telefono, new { htmlAttributes = new { @class = "form-control", @placeholder = "1115454888" } })
                    @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <h6>Correo Electronico</h6>
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Email@ejemplo.com " } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8">
                <div class="form-group">
                    <h6>Dirección</h6>
                    @Html.EditorFor(model => model.Direccion, new { htmlAttributes = new { @class = "form-control", @placeholder = "Avenida Sarmiento 123" } })
                    @Html.ValidationMessageFor(model => model.Direccion, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="col-md-4 text-center">
                <div class="form-group " style="position: absolute;bottom: 0;text-align:center;">
                    <input type="submit" class="btn btn-success btn-send" value="Ingresar">
                </div>
            </div>
        </div>
    </form>

}


<div>
    @* volver atras desde la pagina en la que estaba*@
    <div class="badge badge-primary text-wrap" style="width: 6rem;">
        <a href="http://localhost:63934/Clientes/Index" style="color:white;text-decoration:none">Volver Atras</a>
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
