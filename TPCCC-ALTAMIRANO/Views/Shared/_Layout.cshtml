<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:lightgrey;  ">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("FixSis", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">
                            Reparaciones <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Ingreso</a></li>
                            <li><a href="#">Administrar</a></li>

                        </ul>
                    </li>
                    <li><a href="#">Clientes</a></li>
                    <li>@Html.ActionLink("Proveedores","Index","Proveedores")</li>
                    <li>@Html.ActionLink("Servicios", "Index", "Servicios")</li>
                    @* texto a mostrar, nombre del action result, nombre del controller *@
                    <li>@Html.ActionLink("Usuarios", "Index", "Usuarios")</li>
                </ul>
                @*<img src="https://png.pngtree.com/svg/20161018/to_configure_36980.png" width="25" class="dropdown-toggle" data-toggle="dropdown" role="button" />*@

                @*BUSCAR Y BOTON <form class="navbar-form navbar-right" role="search">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Buscar">
                        </div>
                        <button type="submit" class="btn btn-default">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </form>*@
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - FixSistems</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

